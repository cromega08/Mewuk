<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/content_layout">
	<View
		style="@style/br"
		android:layout_above="@id/content_text"
	/>
	<RelativeLayout
		android:id="@+id/content_text"
		style="@style/content_layout"
		android:layout_alignParentStart="true"
		android:layout_alignParentEnd="true">
		<TextView
			android:id="@+id/content_text_eng"
			style="@style/side_subject_text"
			android:layout_alignParentStart="true"
			android:layout_alignStart="@id/middle_arrow"
			android:singleLine="false"
		/>
		<TextView
			android:id="@+id/middle_arrow"
			style="@style/both_sense_arrow"
			android:layout_centerInParent="true"
		/>
		<TextView
			android:id="@+id/content_text_miw"
			style="@style/side_subject_text"
			android:layout_alignEnd="@id/middle_arrow"
			android:layout_alignParentEnd="true"
		/>
	</RelativeLayout>
	<View
		style="@style/br"
		android:layout_below="@id/content_text"
	/>
</RelativeLayout>
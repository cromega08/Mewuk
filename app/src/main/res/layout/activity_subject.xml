<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/side_layout"
	tools:context=".SubjectActivity">
	<TextView
		android:id="@+id/back"
		style="@style/back_button"
	/>
	<LinearLayout
		style="@style/side_title_group">
		<TextView
			style="@style/big_to_right_arrow"
		/>
		<TextView
			android:id="@+id/subject_title"
			style="@style/side_title_text"
		/>
		<TextView
			style="@style/big_to_left_arrow"
		/>
	</LinearLayout>
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/subject_content"
		style="@style/content_list">
	</androidx.recyclerview.widget.RecyclerView>
</LinearLayout>